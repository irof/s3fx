<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hogedriven.s3fx.S3ConfigController">
   <children>
      <RadioButton fx:id="mockMode" mnemonicParsing="false" text="モックモード(S3に接続しない)">
         <toggleGroup>
            <ToggleGroup fx:id="modeGroup" />
         </toggleGroup>
      </RadioButton>
      <TitledPane text="認証とか">
         <content>
            <VBox spacing="5.0">
               <children>
                  <RadioButton fx:id="defaultMode" mnemonicParsing="false" selected="true" text="デフォルト(~/.aws/credentials)" toggleGroup="$modeGroup" />
                  <RadioButton fx:id="basicMode" mnemonicParsing="false" text="入力する" toggleGroup="$modeGroup" />
                  <GridPane vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="20.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="20.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="accessKey" />
                        <Label text="secretKey" GridPane.rowIndex="1" />
                        <TextField fx:id="accessKey" GridPane.columnIndex="1" />
                        <PasswordField fx:id="secretKey" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </GridPane>
               </children>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </content>
      </TitledPane>
      <TitledPane maxHeight="-Infinity" minHeight="-Infinity" text="プロキシ">
         <content>
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" spacing="20.0">
               <children>
                  <TextField fx:id="proxy" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </content>
      </TitledPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
